{
  "name": "buf-vue",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview --port 4173",
    "test": "vitest run --environment jsdom",
    "generate": "buf generate",
    "test:e2e": "npm run build && start-server-and-test preview http://localhost:4173/ 'cypress open --e2e'",
    "test:e2e:ci": "npm run build && start-server-and-test preview http://localhost:4173/ 'cypress run --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --fix",
    "ci": "npm run generate && npm run lint && npm run build && npm run test && npm run test:e2e:ci"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.55.1",
    "@bufbuild/protobuf": "^2.6.0",
    "@bufbuild/protoc-gen-es": "^2.6.0",
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-web": "^2.0.2",
    "@cypress/webpack-preprocessor": "^6.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.8",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "cypress": "^14.5.0",
    "eslint": "^9.30.0",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-vue": "^10.2.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "resolve-typescript-plugin": "^2.0.1",
    "start-server-and-test": "^2.0.12",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  }
}
